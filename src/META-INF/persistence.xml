<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="BibliotecaPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>model.Autor</class>
    <class>model.Ator</class>
    <class>model.Item</class>
    <class>model.Livro</class>
    <class>model.Revista</class>
    <class>model.Filme</class>
    <class>model.Software</class>
    <class>model.Exemplar</class>
    <class>model.Prateleira</class>
    <class>model.Compra</class>
    <class>model.Reserva</class>
    <class>model.Usuario</class>
    <class>model.Categoria</class>
    <class>model.Emprestimo</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/Biblioteca?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
      <property name="eclipselink.logging.level" value="FINE"/>
      <!--property name="org.eclipse.persistence.fetchgroupmonitor" value="true"/-->
    </properties>
  </persistence-unit>
</persistence>
